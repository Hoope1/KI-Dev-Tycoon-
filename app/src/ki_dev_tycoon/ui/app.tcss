Screen {
    background: $panel;
}

#screen-layout {
    padding: 1 2;
    height: 1fr;
    gap: 1;
}

#screen-content {
    height: 1fr;
    padding-top: 1;
}

NavigationBar > Horizontal {
    gap: 1;
}

.colorblind-mode NavigationBar Button {
    border: solid $warning;
}

.colorblind-mode KpiPanel Table {
    border: solid $warning;
}
